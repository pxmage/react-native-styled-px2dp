{
  "compilerOptions": {
    "module": "CommonJS",
    "baseUrl": "./",
    "outDir": "./dist",
    "declaration": true,
    "declarationDir": "./typings",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es2017"],
